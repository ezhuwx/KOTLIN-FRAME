<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/unknown_error_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginBottom="100dp"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:minHeight="200dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="45dp"
        android:layout_height="51dp"
        android:scaleType="fitXY"
        android:src="@drawable/unknown_error_icon" />

    <TextView
        android:id="@+id/view_unknown_error_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:maxLines="5"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.4"
        android:layout_marginHorizontal="30dp"
        android:text="@string/unknown_error"
        android:textColor="@color/tip_text_color"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/view_unknown_error_tv"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:elevation="5dp"
        android:background="@drawable/corner_solid_blue_bg"
        android:gravity="center"
        android:lineSpacingMultiplier="1.4"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="@string/click_to_retry"
        android:textColor="@color/white_in_deep_bg"
        android:textSize="14sp" />
</LinearLayout>